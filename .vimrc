"Basics"
:set nocompatible
:set backspace=indent,eol,start

"Visuals"
:syntax on
:set number
:set colorcolumn=80
:set textwidth=80

"Mouse"
set mouse=a
map <ScrollWheelUp> <C-Y><C-Y><C-Y>
map <ScrollWeelDown> <C-E><C-E><C-E>

"Tabbing"
:set autoindent
:set smartindent
:set tabstop=2
:set shiftwidth=2
:set noexpandtab

"Printing"
set printoptions=paper:letter,duplex:off,left:5pc,number:y,syntax:n

